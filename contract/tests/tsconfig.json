{
  "compilerOptions": {
    "target": "ESNext", // ou une version spécifique selon vos besoins
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": [
      "node"
    ], // S'assurer que les types Node sont inclus
    "lib": [
      "ESNext",
      "DOM"
    ] // ou autres librairies nécessaires
  },
  "include": [
    "src/**/*"
  ], // Adaptez selon la structure de votre projet
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
